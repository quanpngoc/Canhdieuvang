@{ 
    //validation input
    Validation.RequireField("username", "Bạn chưa nhập tên tài khoản");
    Validation.RequireField("password", "Bạn chưa nhập mật khẩu");
    var messageError = string.Empty;

    var username = "";
    var password = "";

    if (IsPost && Validation.IsValid())
    {
        username = Request.Form["username"];
        password = Request.Form["password"];

        password = FormsAuthentication.HashPasswordForStoringInConfigFile(password, "MD5");

        var db = Database.Open("DefaultConnection");
        var sql = "SELECT * FROM Users where TenDangNhap = @0 and MatKhau = @1";
        var result = db.QuerySingle(sql, username, password);

        if (result != null)
        {
            Session.Add("MaNguoiDung", result.MaNguoiDung);
            Session.Add("TenDangNhap", result.TenDangNhap);
            Session.Add("HinhAnhNguoiDung", result.HinhAnhNguoiDung);
            Session.Add("TenNguoiDung", result.TenNguoiDung);
            Session.Add("Level", result.Level);
            Session.Add("Email", result.Email);
            Session.Add("SDT", result.SDT);
            Session.Add("Level", result.FaceBook);
        }
        else
        {
            messageError = "Tên tài khoản hoặc mật khẩu sai, bạn vui lòng kiểm tra lại.";
        }
    }
}

