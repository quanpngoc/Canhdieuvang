@{
    Layout = "_Layout.cshtml";
    Page.Title = "Thông tin diễn viên - Giải thưởng cánh diều vàng ";
}

@{
    var db = Database.Open("DefaultConnection");
    var actorID = Request["actorID"];

    if (actorID == null)
    {
        <script type="text/javascript">setTimeout(function () { alert('Không tìm thấy diễn viên bạn muốn tìm!'); }, 5000);</script>
    }

    string userID = "ND1";
    if (Session["userID"] != null)
    {
        userID = Session["userID"].ToString();
    }

    var actorInfo = db.Query("SELECT * FROM DienVien WHERE MaDV = '" + actorID + "'").ElementAt(0);
    var actorImgList = db.Query("SELECT * FROM HinhAnhDV WHERE MaDV = '" + actorID + "'");
    var actorAwardList = db.Query("SELECT TenGiaiThuongDV, Nam, HinhAnhGT, TenLoaiGT FROM GiaiThuongDienVien INNER JOIN LoaiGiaiThuongDV ON GiaiThuongDienVien.MaLoaiGT = LoaiGiaiThuongDV.MaLoaiGT " +
        "WHERE MaDV = '" + actorID + "'");
    var othersActor = db.Query("SELECT DISTINCT TOP 8 DienVien.MaDV, TenDV, HinhAnhDV FROM DienVien");
    var commentList = db.Query("SELECT * FROM BinhLuanDienVien INNER JOIN Users ON BinhLuanDienVien.MaNguoiDung = Users.MaNguoiDung WHERE MaDV = '" + actorID + "'");

    var currentUserInfo = db.Query("SELECT TOP 1 MaNguoiDung FROM Users").ElementAt(0);
    if (Session["userID"] != "" && Session["userID"] != null)
    {
        currentUserInfo = db.Query("SELECT * FROM Users WHERE MaNguoiDung = '" + userID + "'").ElementAt(0);
        bool result = insertComment();
        if (result)
        {
            commentList = db.Query("SELECT * FROM BinhLuanDienVien INNER JOIN Users ON BinhLuanDienVien.MaNguoiDung = Users.MaNguoiDung WHERE MaDV = '" + actorID + "'");
        }
    }
    db.Close();
}


@functions{

    public string comment { get; set; }
    public string action { get; set; }

    public bool insertComment()
    {
        if (IsPost)
        {
            action = Request.Form["action"];
            if (action == "actorComment")
            {
                comment = Request.Form["comment"];

                try
                {
                    if(comment != null && comment != "")
                    {
                        var db = Database.Open("DefaultConnection");
                        var index = getMaxCommentID();
                        var result = db.Query("INSERT INTO BinhLuanDienVien VALUES('" + index + "','" + Session["userID"] + "',N'" + comment + "','" + Request["actorID"].ToString() + "',0,'" + DateTime.Now + "');");
                        db.Close();
                        return true;
                    }
                }
                catch (Exception ex)
                {
                    return false;
                }

            }
        }
        return false;
    }

    public string getMaxCommentID()
    {
        var db = Database.Open("DefaultConnection");

        var commentInfo = db.Query("SELECT MAX(MaBinhLuanDV) AS MaxMaBL FROM BinhLuanDienVien");
        db.Close();

        if (commentInfo.Count() > 0 && commentInfo.ElementAt(0).MaxMaBL != null)
        {
            string maxCommentID = commentInfo.ElementAt(0).MaxMaBL;
            string index = (int.Parse(maxCommentID.Substring(2, 4)) + 1).ToString();

            switch (index.Length)
            {
                case 1:
                    index = "000" + index;
                    break;
                case 2:
                    index = "00" + index;
                    break;
                case 3:
                    index = "0" + index;
                    break;
            }

            return maxCommentID.Substring(0, 2) + index;
        }
        else
        {
            return "BL0001";
        }

    }
}


