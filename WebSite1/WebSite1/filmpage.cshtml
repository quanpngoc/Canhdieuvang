@{
    Layout = "_Layout.cshtml";
    Page.Title = "Thông tin phim - Giải thưởng cánh diều vàng";
    Page.Index = -1;
}

@{
    var db = Database.Open("DefaultConnection");

    if (db == null)
    {
        <script type="text/javascript">setTimeout(function () { alert('Kiểm tra nối đến DB của bạn!'); }, 2500);</script>
    }

    var filmID = Request["filmID"];
    string userID = "ND1";
    if (Session["userID"] != null)
    {
        userID = Session["userID"].ToString();
    }


    if (filmID == null)
    {
        <script type="text/javascript">setTimeout(function () { alert('Không tìm thấy film bạn muốn tìm!'); }, 5000);</script>
    }

    var filmInfo = db.Query("SELECT * FROM Phim INNER JOIN LoaiPhim ON Phim.MaLoaiPhim = LoaiPhim.MaLoaiPhim WHERE MaPhim = '" + filmID + "'").ElementAt(0);
    var filmImgList = db.Query("SELECT * FROM HinhAnhPhim WHERE MaPhim = '" + filmID + "'");
    var filmAwardList = db.Query("SELECT TenGiaiThuongPhim, Nam, NoiDungGiaiThuong, HinhAnhGT FROM GiaiThuongPhim WHERE MaPhim = '" + filmID + "'");
    var othersFilm = db.Query("SELECT DISTINCT TOP 8 Phim.MaPhim, TenPhim, Link " +
        "FROM Phim INNER JOIN HinhAnhPhim ON Phim.MaHinhAnhPhim = HinhAnhPhim.MaHinhAnhPhim");
    var commentList = db.Query("SELECT * FROM BinhLuanPhim JOIN Users ON BinhLuanPhim.MaNguoiDung = Users.MaNguoiDung WHERE MaPhim = '" + filmID + "' ORDER BY DanhGia desc");

    var currentUserInfo = db.Query("SELECT TOP 1 MaNguoiDung FROM Users").ElementAt(0);
    if (Session["userID"] != "" && Session["userID"] != null)
    {
        currentUserInfo = db.Query("SELECT * FROM Users WHERE MaNguoiDung = '" + userID + "'").ElementAt(0);
        bool result = insertComment();
        if (result)
        {
            commentList = db.Query("SELECT * FROM BinhLuanPhim JOIN Users ON BinhLuanPhim.MaNguoiDung = Users.MaNguoiDung WHERE MaPhim = '" + filmID + "'");
        }

        db.Close();
    }
}

@functions{

    public string comment { get; set; }
    public string action { get; set; }

    public bool insertComment()
    {
        if (IsPost)
        {
            action = Request.Form["action"];
            if (action == "filmComment")
            {
                comment = Request.Form["comment"];

                try
                {
                    if(comment != null && comment != "")
                    {
                        var db = Database.Open("DefaultConnection");
                        var index = getMaxCommentID();
                        var result = db.Query("INSERT INTO BinhLuanPhim VALUES('" + index + "','" + Session["userID"] + "',N'" + comment + "','" + Request["filmID"].ToString() + "',0,'" + DateTime.Now + "');");
                        db.Close();
                        return true;
                    }
                }
                catch (Exception ex)
                {
                    return false;
                }

            }
        }
        return false;
    }

    public string getMaxCommentID()
    {
        var db = Database.Open("DefaultConnection");

        var commentInfo = db.Query("SELECT MAX(MaBinhLuanPhim) AS MaxMaBL FROM BinhLuanPhim");
        db.Close();

        if (commentInfo.Count() > 0 && commentInfo.ElementAt(0).MaxMaBL != null)
        {
            string maxCommentID = commentInfo.ElementAt(0).MaxMaBL;
            string index = (int.Parse(maxCommentID.Substring(2, 4)) + 1).ToString();
            //string index = (int.Parse(maxCommentID.Substring(2, 4))).ToString();
            switch (index.Length)
            {
                case 1:
                    index = "000" + index;
                    break;
                case 2:
                    index = "00" + index;
                    break;
                case 3:
                    index = "0" + index;
                    break;
            }

            return maxCommentID.Substring(0, 2) + index;
        }
        else
        {
            return "BL0001";
        }
    }

